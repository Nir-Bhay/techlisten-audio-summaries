{
    "manifest_version": 3,
    "name": "TechListen Demo",
    "version": "1.0.0",
    "description": "Convert tech articles to audio summaries",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "TechListen"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}